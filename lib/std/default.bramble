"""std defines some standard bramble helper functions"""


def exec(*args, **kwargs):
    kwargs["print_output"] = True
    expanded_args = []
    for arg in args:
        expanded_args.append(os.expand(str(arg)))
    c = os.cmd(*expanded_args, **kwargs)
    return c.wait()


def fetch_url(url):
    return derivation(builder="fetch_url", env={"url": url})
